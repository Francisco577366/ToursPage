extends base

block content
  main.main
    .login-form.form-register
      h2.heading-secondary.ma-bt-lg Recover your password
      form#resetForm.form.recover-form
        .form__group.ma-bt-md
          label.form__label(for='Password') Password
          input#passwordReset.form__input(type='password', placeholder='New Password', required)
          label.form__label(for='confirmPassword') ConfirmPassword
          input#confirmPasswordReset.form__input(type='password', placeholder='Confirm Password', required)
        .form__group
          button#submitBtn.btn.btn--green(type='submit') Confirm